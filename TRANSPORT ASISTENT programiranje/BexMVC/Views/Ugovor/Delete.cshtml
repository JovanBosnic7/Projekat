@model Bex.Models.Ugovor

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="wrapper">
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Brisanje ugovora</h1>
            </div>
        </div>
        <h3>Da li ste sigurni da li zelite da izbrisete ovaj ugovor?</h3>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Naziv ugovora
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Kontakt.Naziv)
                </dd>

                <dt>
                    Region
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Region.NazivSkraceni)
                </dd>

                <dt>
                    Broj ugovora
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.UgovorBroj)
                </dd>

                <dt>
                    Datum ugovora
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DatumUgovora)
                </dd>

                <dt>
                    Verzija ugovora
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.UgovorVerzija)
                </dd>

                <dt>
                    Datum verzije
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DatumPoslednjeVerzije)
                </dd>

                <dt>
                    Datum obnove
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DatumObnove)
                </dd>

                <dt>
                    Ugovorio
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.UgovorilacNaziv)
                </dd>
                <dt>
                    Agent
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Zaposleni.Kontakt.Naziv)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" /> |
                    @Html.ActionLink("Back to List", "../Ugovor")
                </div>
            }
        </div>
    </div>
</div>
