@model Bex.Models.Cenovnik

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="wrapper">
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Brisanje cenovnika</h1>
            </div>
        </div>
        <h3>Da li ste sigurni da li zelite da izbrisete ovaj cenovnik?</h3>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Broj cenovnika
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.BrojCenovnika)
                </dd>

                <dt>
                    Datum cenovnika
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.DatumCenovnika)
                </dd>

                <dt>
                    Opis cenovnika
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.OpisCenovnika)
                </dd>

                <dt>
                    Storno
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Storno)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" /> |
                    @Html.ActionLink("Back to List", "../VozniPark")
                </div>
            }
        </div>
    </div>
</div>
