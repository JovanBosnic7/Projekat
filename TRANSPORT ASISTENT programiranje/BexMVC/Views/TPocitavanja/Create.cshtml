@model Bex.Models.TPocitavanja

@{
    ViewBag.Title = "Tehnički pregled: Očitavanja - Dodaj";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="wrapper">
    <div id="page-wrapper">
        <div class="row">
            <div class="card">

                <div class="card-header card-header-primary">

                    <h2 class="card-title" style="color:#666;">Tehnički pregled: Očitavanja</h2>

                </div>

                <div class="card-body">
                    <div class="container">
                        <div class="container-fluid" style="margin-bottom:10px;">

                            <!-- Breadcrumbs-->
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="../TehnickiPregled">Tehnički pregled</a>
                                </li>
                                <li class="breadcrumb-item active">Dodaj</li>
                            </ol>

                            <!-- Page Content -->
                            <h3>Dodavanje očitavanja tehničkog pregleda</h3>
                            <hr>
                            <p></p>

                        </div>
                        @using (Html.BeginForm(new { @class = "form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            @Html.HiddenFor(model => model.ModelId, new { id = "ModelId" })


                            <div>
                                <label class="control-label col-sm-2">Datum očitavanja</label>
                                <div class="col-sm-10">
                                    <div class='input-group'>
                                        @Html.TextBoxFor(model => model.DatumOcitavanja, "{0:dd-MM-yyyy}", new { @class = " form-control   datepicker-dat-start" })
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                </div>
                            </div>



                            <div class="form-group">
                                <label class="control-label col-sm-2" for="Kategorija">Kategorija</label>
                                <div class="col-sm-10">
                                    @Html.DropDownList("KategorijaVozilaId", null, " ",  htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.KategorijaVozilaId, "", new { @class = "text-danger" })

                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="Karoserija">Karoserija</label>
                                <div class="col-sm-10">
                                    @Html.DropDownList("KaroserijaVozilaId", null, " ", htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.KaroserijaVozilaId, "", new { @class = "text-danger" })

                                </div>
                            </div>

                            <div class="ui-widget">
                                <label class="control-label col-sm-2" for="model">Model </label>
                                <div class="col-sm-10">

                                    <div class='input-group'>
                                        <input id="model" class="form-control">

                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-search"></span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-2" for="BrojSasije">Broj šasije</label>
                                <div class="col-sm-10">
                                    <div class='input-group'>
                                        @Html.EditorFor(model => model.BrojSasije, new { htmlAttributes = new { @class = "form-control", @onkeyup = "brojKarakteraSasija(this);" } })
                                        @Html.ValidationMessageFor(model => model.BrojSasije, "", new { @class = "text-danger" })
                                        <span class="input-group-addon" id="count1">
                                            0
                                        </span>

                                    </div>
                                </div>
                            </div>


                            <div class="form-group">
                                <label class="control-label col-sm-2" for="BrojMotora">Broj motora</label>
                                <div class="col-sm-10">
                                    <div class='input-group'>
                                        @Html.EditorFor(model => model.BrojMotora, new { htmlAttributes = new { @class = "form-control", @onkeyup = "brojKarakteraMotor(this);" } })
