@model Bex.Models.Zaposleni


@{
    Layout = null;
}



@using (Ajax.BeginForm("CreateZaposlenjePartial", "Zaposleni", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "createZaposlenje" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id, new { Value = @ViewBag.ZaposleniId })
    @Html.HiddenFor(model => model.KontaktSefId, new { id = "KontaktSefId" })

    <div class="panel panel-default  " id="div_zaposlenje">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" data-parent="#accordion" href="#tabZaposlenje">Zaposlenje</a>
                @if (@ViewBag.AddZaposlenje)
                {
                    <span style="color:green;"> - Uspešno ste dodali podatke...</span>
                }
            </h4>
        </div>
        <div id="tabZaposlenje" class="panel-collapse collapse ">
            <div class="panel-body">
                <div class="container">
                    <div class="container-fluid" style="margin-bottom:10px;">

                        <!-- Breadcrumbs-->
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="../Zaposleni">Zaposleni</a>
                            </li>
                            <li class="breadcrumb-item active">Dodaj</li>
                        </ol>

                        <!-- Page Content -->
                        <h3>Unos podataka vezanih za Bex zaposlenje</h3>
                        <hr>
                        <p>Izaberite region, sektor i radno mesto zaposlenog...</p>

                    </div>




                    <div class="form-group">
                        <label class="control-label col-sm-2" for="RegionId">Region</label>
                        <div class="col-sm-10">
                            @Html.DropDownList("RegionId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.RegionId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="SektorId">Sektor</label>
                        <div class="col-sm-10">
                            @Html.DropDownList("SektorId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.SektorId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="FirmaPrijaveId">Firma prijave</label>
                        <div class="col-sm-10">
                            @Html.DropDownList("FirmaPrijaveId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.FirmaPrijaveId, "", new { @class = "text-danger" })
                        </div>
                    </div> <div class="form-group">
                        <label class="control-label col-sm-2" for="RadnoMestoId">Radno mesto</label>
                        <div class="col-sm-10">
                            @Html.DropDownList("RadnoMestoId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.RadnoMestoId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group ui-widget">
                        <label class="control-label col-sm-2" for="sef">Šef </label>
                        <div class="col-sm-10">
                            <input id="sef" class="form-control">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2"></label>
                        <div class="col-sm-10">
                            <div class="btn-group pull-right ">
                                <input type="submit" value="Sačuvaj" class="btn btn-default btn-xs" />
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>


}
