@model Bex.Models.VozniPark

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="wrapper">
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Brisanje vozila</h1>
            </div>
        </div>
        <h3>Da li ste sigurni da li zelite da izbrisete ovo vozilo?</h3>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    Model
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.VozniParkModel.NazivModela)
                </dd>

                <dt>
                    Garažni broj
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.GarazniBroj)
                </dd>

                <dt>
                    Registracija
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Oznaka)
                </dd>

                <dt>
                    Region
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Region.NazivSkraceni)
                </dd>

                <dt>
                    Status
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.VozniParkStatus.NazivStatusa)
                </dd>

                <dt>
                    Aktivan
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Aktivno)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" /> |
                    @Html.ActionLink("Back to List", "../VozniPark")
                </div>
            }
        </div>
    </div>
</div>
