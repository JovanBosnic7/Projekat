@model Bex.Models.Street
@using BexMVC.Helpers

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="card">

                <div class="card-header card-header-primary">

                    <h2 class="card-title" style="color:#666;">Dodavanje nove ulice</h2>
                    <div class="pull-right">
                        <div class="btn-group">
                            <input type="submit" value="Sacuvaj" class="btn btn-default btn-xs" />
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.IdStari)
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label>Naziv ulice</label>
                                            @Html.EditorFor(model => model.StreetName, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.StreetName, "", new { @class = "text-danger" })
                                        </div>
                                        @*<div class="form-group">
                                                <label>Mesto</label>
                                                @Html.DropDownList("PlaceId", null, htmlAttributes: new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.PlaceId, "", new { @class = "text-danger" })

                                            </div>*@
                                        <div class="form-group">
                                            <label>Mesto</label>
                                            <br />
                                            @Html.AutocompleteFor(model => model.MestoNaziv, model => model.PlaceId, "GetMesto", "Street", false, new { htmlAttributes = new { @class = "form-control", placeholder = "Kucajte podatke o mestu..." } })

                                        </div>
                                        <div class="form-group">
                                            <label>Napomena</label>
                                            @Html.EditorFor(model => model.Comment, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
                                        </div>

                                    </div>
                                </div>

                            </div>
                        </div>
                    }
                </div>
            </div>
            <div>
                @Html.ActionLink("Back to List", "../Street")
            </div>
        </div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </div>
</div>
