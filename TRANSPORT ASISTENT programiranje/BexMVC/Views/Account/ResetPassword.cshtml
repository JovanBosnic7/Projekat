@model BexMVC.ViewModels.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}

<div class="row">
    <div class="col-lg-4 col-md-6 col-sm-6"></div>
    <div class="col-lg-4 col-md-6 col-sm-6">
        <div class="card card-login">
            <div class="card-header card-header-primary ">
                <img src="~/Content/images/bexLogoMali.png" />
            </div>
            <div class="card-body">

                @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Code)
                    <div class="input-group">
                        @*@Html.LabelFor(m => m.Email, new { @class = "col-md-5 control-label" })*@
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder="Korisnicko ime" })
                        
                    </div>
                    <div class="input-group">
                        @*@Html.LabelFor(m => m.Password, new { @class = "col-md-5 control-label" })*@
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Unesite novu lozinku" })
                       
                    </div>
                    <div class="input-group">
                        @*@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-5 control-label" })*@
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Ponovite lozinku" })
                       
                    </div>
                    <div class="col-md-12">
                        <input type="submit" value="OK" class="btn btn-lg btn-danger btn-block" />
                    </div>
                }
            </div>
            </div>
        </div>
    </div>

                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }
