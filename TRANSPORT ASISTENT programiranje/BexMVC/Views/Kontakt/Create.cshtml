        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
            <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/smoothness/jquery-ui.css">
            <script src="//code.jquery.com/jquery-1.12.4.js"></script>
            <script src="//code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

            <script type="text/javascript">

                $(document).ready(function () {

                    $('.datepicker').datepicker();
                    $(".datepicker").attr("autocomplete", "off");



                    $("#adresa").autocomplete({
                        source: function (request, response) {
                            $.ajax({
                                url: "/Kontakt/GetAdrese?query=" + request.term,
                                dataType: "json",
                                success: function (data) {
                                    response($.map(data, function (v, i) {
                                        return {
                                            value: v.Name,
                                            id: v.Id

                                        };
                                    }));
                                }
                            })
                        },
                        minLength: 2,
                        select: function (event, ui) {
                            $('#PakId').val(ui.item.id);
                            $('#Adresa').val(ui.item.value);
                        }
                    });

                    $('#PravnoCheck').change(function () {

                        $('#Pravno').val($(this).is(':checked'))

                    });

                    $('#StranacCheck').change(function () {

                        $('#Stranac').val($(this).is(':checked'))

                    });
                    //$('.datepicker').on('click', function (e) {
                    //    e.preventDefault();
                    //    $(this).attr("autocomplete", "off");
                    //});

                    //$("#div_pravno").hide();

                    $("#PravnoCheck").change(function () {
                        if (this.checked) { //pravno lice je
                            $("#div_prezime").hide();
                            //$("#div_pravno").show();
                            $("#div_stranac").hide();
                        } else { //fizicko je
                            $("#div_prezime").show();
                            //$("#div_pravno").hide();
                            $("#div_stranac").show();
                        }
                    });




                });
            </script>
