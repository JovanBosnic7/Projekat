@model Bex.Models.KontaktPravnoLice

@{
    Layout = null;
}


@using (Ajax.BeginForm("EditDetailsPravnoPartial", "Kontakt", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "editPravnoPartial" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.KontaktId, new { Value = @ViewBag.KontaktId })
    @Html.HiddenFor(model => model.SedisteKontaktId, new { id = "SedisteKontaktId" })

    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" data-parent="#accordion" href="#tabPravnoLice">PRAVNO LICE - dodatni podaci</a>
                @if (@ViewBag.AddPravnoLice)
                {
                    <span style="color:green;"> - Uspešno ste dodali podatke...</span>
                }

            </h4>
        </div>
        <div id="tabPravnoLice" class="panel-collapse collapse ">
            <div class="panel-body">
                <div class="container">
                    <div class="container-fluid" style="margin-bottom:10px;">

                        <!-- Breadcrumbs-->
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="../Kontakt">Kontakti</a>
                            </li>
                            <li class="breadcrumb-item active">Dodaj</li>
                        </ol>

                        <!-- Page Content -->
                        <h3>Unos dodatnih podataka za pravno lice</h3>
                        <hr>
                        <p>Unesite sediše, pib i ostale podatke...</p>

                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2" for="Poslovnica">Poslovnica</label>
                        <div class="col-sm-10">
                            <div class="form-check">
                                <label class="form-check-label control-label">
                                    <input class="form-check-input" type="checkbox" value="" id="PoslovnicaCheck">
                                    <span class="form-check-sign">
                                        <span class="check"></span>
                                    </span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group ui-widget">
                        <label class="control-label col-sm-2" for="kontakt"><i class="fa fa-link fa-fw"></i><u>Kontakt</u> </label>
                        <div class="col-sm-10">
                            <input id="kontakt" class="form-control">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2">PIB</label>
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.PIB, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PIB, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2">Matični broj</label>
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.MaticniBroj, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MaticniBroj, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2" for="Delatnost">Delatnost</label>
                        <div class="col-sm-10">
                            @Html.DropDownList("DelatnostId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.DelatnostId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2">Direktor</label>
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.Direktor, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Direktor, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2">Sajt</label>
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.WebSajt, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.WebSajt, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2"></label>
                        <div class="col-sm-10">
                            <div class="btn-group pull-right ">
                                <input type="submit" value="Sačuvaj" class="btn btn-default btn-xs" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
