@model Bex.Models.KontaktZiroRacun
@{
    /**/

    Layout = null;
}


@using (Ajax.BeginForm("CreateDetailsZiroRacuniPartial", "Kontakt", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "createZiroRacunPartial" }))
{
    @Html.AntiForgeryToken()


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.KontaktId, new { Value = @ViewBag.KontaktId })

    <div class="panel panel-default  ">
        <div class="panel-heading">
            <h4 class="panel-title">
                <a data-toggle="collapse" data-parent="#accordion" href="#tabZiroRacun">Žiro račun</a>
                @if (@ViewBag.AddZiroRacun)
                {
                    <span style="color:green;"> - Uspešno ste dodali podatke...</span>
                }

            </h4>
        </div>
        <div id="tabZiroRacun" class="panel-collapse collapse ">
            <div class="panel-body">
                <div class="container">
                    <div class="container-fluid" style="margin-bottom:10px;">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="../Kontakt">Kontakti</a>
                            </li>
                            <li class="breadcrumb-item active">Dodaj</li>
                        </ol>
                        <h3>Unos žiro računa za kontakt</h3>
                        <hr>
                        <p>Unesite žiro račun...</p>

                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2">Banka</label>
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.Banka, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Banka, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2">Račun</label>
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.BrojZiroRacuna, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.BrojZiroRacuna, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-2"></label>
                        <div class="col-sm-10">
                            <div class="btn-group pull-right ">
                                <input type="submit" value="Sačuvaj" class="btn btn-default btn-xs" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
