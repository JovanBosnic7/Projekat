@model Bex.Models.User

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="wrapper">
    <div id="page-wrapper">
        <br />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.KontaktId)

        <div class="panel panel-default">

            <div class="panel-heading">
                Dodavanje novog korisnika

                <div class="pull-right">
                    <div class="btn-group">
                        <input type="submit" value="Sacuvaj" class="btn btn-default btn-xs" />
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">

                        <div class="form-group">
                            @Html.LabelFor(model => model.KorisnickoIme, "Korisnicko ime", htmlAttributes: new { @class = "control-label col-md-2 small" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.KorisnickoIme, new { htmlAttributes = new { @class = "form-control input-sm" } })
                                @Html.ValidationMessageFor(model => model.KorisnickoIme, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Lozinka, "Lozinka", htmlAttributes: new { @class = "control-label col-md-2 small" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Lozinka, new { htmlAttributes = new { @class = "form-control input-sm" } })
                                @Html.ValidationMessageFor(model => model.Lozinka, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.BarKod, "Bar kod", htmlAttributes: new { @class = "control-label col-md-2 small" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.BarKod, new { htmlAttributes = new { @class = "form-control input-sm" } })
                                @Html.ValidationMessageFor(model => model.BarKod, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.RegionId, "Region", htmlAttributes: new { @class = "control-label col-md-2 small" })
                            <div class="col-md-10">
                                @Html.DropDownList("RegionId", null, htmlAttributes: new { @class = "form-control input-sm" })
                                @Html.ValidationMessageFor(model => model.RegionId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Klijent, "Klijent", htmlAttributes: new { @class = "control-label col-md-2 small" })
                            <div class="col-md-10">
                                @Html.CheckBoxFor(model => model.Klijent, new { htmlAttributes = new { @class = "form-control " } })
                                @Html.ValidationMessageFor(model => model.Klijent, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Aktivan, "Aktivan", htmlAttributes: new { @class = "control-label col-md-2 small" })
                            <div class="col-md-10">
                                @Html.CheckBoxFor(model => model.Aktivan, new { htmlAttributes = new { @class = "form-control " } })
                                @Html.ValidationMessageFor(model => model.Aktivan, "", new { @class = "text-danger" })
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>
        }

        <div>
            @Html.ActionLink("Back to List", "../User")
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </div>
</div>
