        $tableServisi.configTable('Alarmi/GetAlarmiZaposleniOveNedelje');
        $tableServisi.hideColTable();

        $(document).ready(function () {

            var $checkTableElements = [$edit, $delete];
            $table.checkOptionsTable($checkTableElements);
