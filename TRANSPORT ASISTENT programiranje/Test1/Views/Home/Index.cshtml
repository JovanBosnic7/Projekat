        });
        function DetailsAlarmLink(value, row, index) {
            return "<a href='Alarmi/Edit?id=" + row.Id + "' target='_blank' class='details_link'>" + value + "</a>";
        }
        function getIdSelections() {
            return $.map($table.bootstrapTable('getSelections'), function (row) {
