@model BexMVC.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Register";
}
<div id="wrapper">
    <div id="page-wrapper">
        <div class="row">
            <div class="card">
                <div class="card-header card-header-primary">

                    <h2 class="card-title" style="color:#666;">Registracija korisnika</h2>

                </div>

                <div class="card-body">
                    <div class="container">
                        <div class="container-fluid" style="margin-bottom:10px;">

                            <!-- Breadcrumbs-->
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="../KorisniciPrograma">Bex korisnici</a>
                                </li>
                                <li class="breadcrumb-item active">Registracija korisnika</li>
                            </ol>

                            <!-- Page Content -->
                            <h3>Registracija korisnika</h3>
                            <hr>
                            <p>Dodavanje korisnickog imena, emaila i lozinke za novog korisnika</p>

                        </div>

                        @using (Html.BeginForm("Register", "Account", new { ReturnUrl = "CreateKorisniciPrograma" }, FormMethod.Post, new { onkeydown = "return event.keyCode!=13", @class = "form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <div class="input-group">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                            </div>
                            <div class="input-group">
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Korisnicko ime" })
                            </div>
                            <div class="input-group">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Lozinka" })
                            </div>
                            <div class="input-group">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Ponovite lozinku" })
                            </div>


                            <div class="form-group">
                                <label class="control-label col-sm-2"></label>
                                <div class="col-sm-10">
                                    <div class="btn-group pull-right ">
                                        <input type="submit" value="Sačuvaj" class="btn btn-default btn-xs" />
                                    </div>
                                </div>
                            </div>




                        }

                    </div>
                </div>
            </div>
        </div>
</div>
</div>


