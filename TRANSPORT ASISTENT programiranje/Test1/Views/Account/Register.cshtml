@model DDtrafic.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Register";
}
<div class="row">
    <div class="col-lg-4 col-md-6 col-sm-6"></div>
    <div class="col-lg-4 col-md-6 col-sm-6">
        <div class="card card-login">
            <div class="card-header card-header-primary ">
                <img src="~/Content/images/bexLogoMali.png" />
                @*<h3 class="panel-title">Please Sign In</h3>*@
            </div>
            <div class="card-body">

                @using (Html.BeginForm("Register", "Account",  FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                    </div>
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Korisnicko ime" })
                    </div>
                    <div class="input-group">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Lozinka" })
                    </div>
                    <div class="input-group">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Ponovite lozinku" })
                    </div>


                    <div class="input-group">
                        <div class="col-md-12">
                            <input type="submit" value="OK" class="btn btn-lg btn-danger btn-block" />
                        </div>
                    </div>

                    <div class="col-md-10">
                        <p>
                            @Html.ActionLink("Ukoliko imate pristupne podatke, klik ovde za logovanje", "Login")
                        </p>

                    </div>


                }

            </div>

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
                <script type="text/javascript">
                    document.getElementById("leftSideBar").style.display = "none";
                </script>
            }
        </div>
    </div>
</div>
 
